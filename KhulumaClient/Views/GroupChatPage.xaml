<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="KhulumaClient.GroupChatPage"
             xmlns:local="clr-namespace:KhulumaClient.DataTemplates;assembly=KhulumaClient" Title="Group Chat and Info Portal">

    <ContentPage.Resources>
        <ResourceDictionary>

            <local:TemplateSelector x:Key="TemplateSelector" />

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>

        <Grid RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListView 
                Grid.Row="0"
                x:Name="chatListView" 
                HasUnevenRows="True" 
                ItemTemplate="{StaticResource TemplateSelector}" 
                SeparatorVisibility="None" />

            <!-- Entry and Send button in Row 1 -->
            <StackLayout Orientation="Horizontal" Grid.Row="1" Padding="10" BackgroundColor="#EFEFEF">
                <Entry 
			    HorizontalOptions="FillAndExpand" 
				HeightRequest="25" 
				Placeholder="Message" 
				x:Name="MessageBox"/>
                <Button 
                    x:Name="SendButton"
				    Text="Send" 
				    />
            </StackLayout>





        </Grid>

        
       
        

    </ContentPage.Content>
</ContentPage>
